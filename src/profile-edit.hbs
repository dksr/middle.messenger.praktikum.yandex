<!doctype html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <title>Profile edit</title>
  <link rel="stylesheet" href="styles.scss">
</head>
<body>
<div class="container">
  <div class="profile-content">
    <div class="profile-content__sidebar">
      <a href="index.hbs">
        <img src="../static/profile-back.svg" alt="back">
      </a>
    </div>
    <div class="profile-content__avatar">
      <a href="profile-avatar-edit.hbs">
        <img src="../static/no-avatar.png" alt="empty avatar">
        <span>Поменять аватар</span>
      </a>
    </div>
    <div class="profile-content__title">Иван</div>
    <div class="profile-content__table">
      <div class="row">
        <span class="field-name">Почта</span>
        <span class="field-value" contenteditable>pochta@yandex.ru</span>
      </div>
      <div class="row">
        <span class="field-name">Логин</span>
        <span class="field-value" contenteditable>ivanivanov</span>
      </div>
      <div class="row">
        <span class="field-name">Имя</span>
        <span class="field-value" contenteditable>Иван</span>
      </div>
      <div class="row">
        <span class="field-name">Фамилия</span>
        <span class="field-value" contenteditable>Иванов</span>
      </div>
      <div class="row">
        <span class="field-name">Имя в чате</span>
        <span class="field-value" contenteditable>Иван</span>
      </div>
      <div class="row">
        <span class="field-name">Телефон</span>
        <span class="field-value" contenteditable>+7 (999) 111-11-11</span>
      </div>
    </div>
    <div class="profile-content__buttons">
      <a class="profile-content__save-button" href="profile.hbs">Сохранить</a>
    </div>
  </div>
</div>
</body>
</html>
